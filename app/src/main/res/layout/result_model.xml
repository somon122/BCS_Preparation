<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:padding="2dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/resultExamNumber_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textStyle="italic|bold"
                android:padding="2dp"
                android:text="1"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/resultExamQuestion_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:padding="5dp"
                android:textStyle="italic|bold"
                android:text="What is your name?"
                android:textColor="@color/colorBlack" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">


            <RadioGroup
                android:id="@+id/resultExamOptionGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_id"

                >

                <RadioButton
                    android:id="@+id/resultExamOptionNo1_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Data is empty"
                    android:textColor="#000000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/resultExamOptionNo2_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Data is empty"
                    android:textColor="#000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/resultExamOptionNo3_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Data is empty"
                    android:textColor="#000"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/resultExamOptionNo4_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Data is empty"
                    android:textColor="#000"
                    tools:ignore="RtlSymmetry" />


            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <Button

                    android:id="@+id/resultAns_id"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite"
                    android:text="উত্তর দেখুন"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                  <Button

                    android:id="@+id/resultExplain_id"
                    android:layout_margin="5dp"
                    android:background="@color/colorWhite"
                    android:text="ব্যাখ্যা দেখুন"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/resultDetailsView_id"
                android:padding="5dp"
                android:textSize="17sp"
                android:visibility="gone"
                android:text="details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>