<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/publishCategory_id"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:padding="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/publishDate_id"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:background="#39B504"
            android:padding="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/publishSubject_id"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:padding="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

   <TextView
            android:id="@+id/publishSyllabus_id"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:visibility="gone"
            android:padding="5dp"
            android:gravity="center"
            android:text="Syllabus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <Button
            android:id="@+id/publishSeeButton"
            android:text="রেজাল্ট দেখুন"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>